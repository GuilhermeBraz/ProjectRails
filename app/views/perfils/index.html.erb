<p id="notice"><%= notice %></p>

<h1>Perfils</h1>

<table>
  <thead>
    <tr>
      <th>Idade</th>
      <th>Altura</th>
      <th>Sexo</th>
      <th>Peso</th>
      <th>Objetivo</th>
      <th>Atividade</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.idade %></td>
        <td><%= perfil.altura %></td>
        <td><%= perfil.sexo %></td>
        <td><%= perfil.peso %></td>
        <td><%= perfil.objetivo %></td>
        <td><%= perfil.atividade %></td>
        <td><%= perfil.user_id %></td>
        <td><%= link_to 'Show', perfil %></td>
        <td><%= link_to 'Edit', edit_perfil_path(perfil) %></td>
        <td><%= link_to 'Destroy', perfil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

